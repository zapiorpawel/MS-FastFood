<UserControl x:Class="MS_FastFood.View.Order_control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MS_FastFood.View"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>


        <ListBox x:Name="OrderListBox" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Padding="50" Height="550" Width="350"/>
        <Button x:Name="SummaryButton" Grid.Row="2" Grid.Column="3" Content="Potwierdź zamówienie" FontSize="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="10" Margin="10"/>
        <Button x:Name="AddButton" Grid.Row="2" Grid.Column="0" Content="Dodaj" FontSize="25" VerticalAlignment="Bottom" HorizontalAlignment="Left" Padding="10" Margin="10"/>
        <Button x:Name="DeleteButton" Grid.Row="2" Grid.Column="0" Content="Usuń" FontSize="25" VerticalAlignment="Bottom" HorizontalAlignment="Left" Padding="10" Margin="157,0,0,10"/>
        <TabControl Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="550" Width="605" SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="Burgers" Header="Burgery" HorizontalAlignment="Right" Margin="0,0,0,0" Width="150">
                <ListBox x:Name="BurgersListBox" Margin="3px"/>
            </TabItem>

            <TabItem x:Name="Drinks" Header="Napoje"  Width="150">
                <ListBox x:Name="DrinksListBox" Margin="3px"/>
            </TabItem>

            <TabItem x:Name="Additions" Header="Dodatki" Width="150">
                <ListBox x:Name="AdditionsListBox" Margin="3px"/>
            </TabItem>

            <TabItem x:Name="Sets" Header="Zestawy" Width="150">
                <ListBox x:Name="SetsListBox" Margin="3px"/>
            </TabItem>

        </TabControl>

    </Grid>
</UserControl>

<Window x:Class="MS_FastFood.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MS_FastFood"
        xmlns:lang="clr-namespace:MS_FastFood.Properties.Lang" xmlns:View="clr-namespace:MS_FastFood.View"
        mc:Ignorable="d"
       Title="{x:Static lang:Lang.Title}" Height="720" Width="1024">
    <Grid>
        <View:Summary_control x:Name="SummaryControl" Visibility="Hidden">

        </View:Summary_control>

        <View:Order_control x:Name="OrderControl" Visibility="Visible" Margin="10,0,-10,0">
            
        </View:Order_control>
        
        <View:start_window_control x:Name="StartControl"  Visibility="Hidden">
            
        </View:start_window_control>
        
        
    </Grid>
</Window>

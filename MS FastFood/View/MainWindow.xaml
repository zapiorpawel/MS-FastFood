<Window x:Class="MS_FastFood.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MS_FastFood"
        xmlns:lang="clr-namespace:MS_FastFood.Properties.Lang" xmlns:View="clr-namespace:MS_FastFood.View"
        mc:Ignorable="d"
       Title="{x:Static lang:Lang.Title}" Height="720" Width="1024">
    <Grid>
        <View:Summary_control x:Name="SummaryControl" Visibility="{Binding SummaryControlVisibility}">

        </View:Summary_control>

        <View:Order_control x:Name="OrderControl" Visibility="{Binding OrderControlVisibility}">
            
        </View:Order_control>
        
        <View:start_window_control x:Name="StartControl"  >
            <DataTrigger Binding="{Binding Path=vis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" Value="False">
                <Setter Property="Visibility" Value="Hidden"/>
            </DataTrigger>
        </View:start_window_control>
        
        
    </Grid>
</Window>
